<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pendu.PerduPage">


    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Game Over"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Game Over" />
            
            <Label 
                Text="Tu as perdu..." 
                FontSize="30" 
                HorizontalOptions="Center"/>

            <Label 
                x:Name="MotsLabel" 
                FontSize="20" 
                HorizontalOptions="Center"/>
            
            <Button 
                Text="Rejouer" 
                Clicked="BoutonRejouer"
                HorizontalOptions="Center"/>

            <Button 
                Text="Quitter" 
                Clicked="BoutonQuitter" 
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
